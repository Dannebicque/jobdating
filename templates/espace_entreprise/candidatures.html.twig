{% extends 'base.html.twig' %}

{% block header %}
    Suivi des candidatures
{% endblock %}

{% block content %}
    <div class="row">
        {% for candidature in candidatures %}
            <div class="col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h5>{{ candidature.etudiant.display }}</h5>
                        <p>Offre : {{ candidature.offre.titre }}</p>
                        <p>Jobdating : {% if candidature.creneau != null %}
                                <span class="badge bg-success">Créneau réservé à {{ candidature.creneau|date
                                    ('H:i') }}, stand {{ candidature.stand }}</span>
                            {% else %} <span class="badge bg-warning">Pas de créneau réservé</span>{% endif
                            %}</p>
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                {% if candidature.cv != null %}
                                <a href="{{ asset('pdf/cv/'~candidature.cv) }}" class="btn btn-primary" target="_blank">
                                    Voir le CV
                                </a>
                                {% endif %}
                            </div>
                            <div class="col-md-6 col-sm-12">
                                {% if candidature.lettre != null %}
                                <a href="{{ asset('pdf/lettres/'~candidature.lettre) }}" class="btn btn-primary"
                                   target="_blank">
                                    Voir la lettre de candidature
                                </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

