{% extends 'base.html.twig' %}

{% block header %}Offre {{ offre.titre }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ offre.titre }}</td>
                </tr>
                <tr>
                    <th>Descriptif</th>
                    <td>{{ offre.descriptif }}</td>
                </tr>
                <tr>
                    <th>Fiche de poste (PDF)</th>
                    <td><a href="{{ absolute_url(asset('/pdf/offres/'~offre.offrePdf)) }}" target="_blank">Voir</a></td>
                </tr>
                <tr>
                    <th>Parcours souhaités</th>
                    <td>
                        {% for parcour in offre.parcours %}
                            <span class="badge bg-{{ parcour.diplome.color }}">{{ parcour.display }}</span>
                        {% endfor %}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block bouton_header %}
    <a href="{{ path('app_espace_entreprise') }}" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left-circle"></i>
        Retour à l'espace entreprise
    </a>
{% endblock %}
